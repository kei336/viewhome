<div class="posts-show" >
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="show-layout">
          <%= image_tag @post.display_image %>
        </div>
      </div>
      <div class="col-md-6">
        <%= link_to gravatar_for(@post.user, size:50), @post.user %>
        <%= link_to @post.user.name, @post.user %>
        <div id="like-<%= @post.id%>">
          <%= render "users/like" %>
        </div>
        <h2>オススメアプリ</h2>
        <%= @post.name %>
        <h2>オススメポイント</h2>
        <%= @post.content%>
        <h4><%= link_to 'このアプリの情報を見る', 'https://www.apple.com/jp/search/post.name?src=globalnav' %></h4>

      </div>
    </div>
  </div>
</div>