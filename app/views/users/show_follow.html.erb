<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="show-follow-icon icon">
      <% if @user.icon.attached? %>
        <%= image_tag @user.icon_image %>
      <% else %>
        <%= image_tag("default_user.jpg", size: 50)%>
      <% end %>
      </div>
      <div class="show-follow-name">
        <h2><%= @user.name %></h2>
      </div>
      <%= render 'shared/stats' %>
    </div>
    <div class="col-md-8">
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </div>
  </div>
</div>