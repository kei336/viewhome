  <div class="container">
    <div class="row">
      <h1>
        <%= gravatar_for @user %>
        <div class="profile-name">
          <%= @user.name %>
        </div>
      </h1>
      <div class="user-show-menu">
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      
        <%= render 'follow_form' if logged_in? %>
          <% if @user.posts.any? %>
            <%= link_to "投稿一覧", @user, class: "posts-likes" %>
            <%= link_to "いいね一覧", "/users/#{@user.id}/likes", class: "posts-likes" %>
            <% @likes.each do |like| %>
            <% post = Post.find_by(id: like.post_id) %> 
            <li class="posts">
              <%= render post %>
            </li>
            <% end %>
          <% end %>
            <div class="col-md-12">
              <%= will_paginate @likes %>
            </div> 
        </div>
    </div>
  </div>
